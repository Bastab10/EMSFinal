<div class="container d-flex justify-content-center align-items-center"
     style="min-height: 90vh;">

  <div class="card shadow-lg p-4"
       style="width: 900px; border-radius: 15px;">

    <h2 class="mb-4">Sign Up</h2>

    <form action="/signup" method="POST">

      <div class="row">

        <!-- Full Name -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Full Name *</label>
          <input name="fullname" class="form-control" required>
        </div>

        <!-- Email -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Email *</label>
          <input type="email"
                 name="email"
                 class="form-control" required>
        </div>

        <!-- College ID -->
        <div class="col-md-6 mb-3">
          <label class="form-label">College ID *</label>
          <input name="collegeId"
                 class="form-control" required>
        </div>

        <!-- Role -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Role *</label>
          <select name="role"
                  id="role"
                  class="form-select" required>
            <option value="">Select Role</option>
            <option value="Student">Student</option>
            <option value="Faculty">Faculty</option>
          </select>
        </div>

        <!-- ========== STUDENT FIELDS ========== -->

        <!-- Branch -->
        <div class="col-md-6 mb-3 student-field">
          <label class="form-label">Branch *</label>
          <select name="branch" class="form-select">
            <option>Select Branch</option>
            <option>CSE</option>
            <option>IT</option>
            <option>ECE</option>
            <option>ME</option>
          </select>
        </div>

        <!-- Year -->
        <div class="col-md-6 mb-3 student-field">
          <label class="form-label">Year *</label>
          <select name="year" class="form-select">
            <option>Select Year</option>
            <option>1st</option>
            <option>2nd</option>
            <option>3rd</option>
            <option>4th</option>
          </select>
        </div>

        <!-- Section -->
        <div class="col-md-6 mb-3 student-field">
          <label class="form-label">Section *</label>
          <input name="section"
                 class="form-control">
        </div>

        <!-- ========== FACULTY FIELDS ========== -->

        <!-- Department -->
        <div class="col-md-6 mb-3 faculty-field"
             style="display:none;">
          <label class="form-label">Department *</label>
          <input name="department"
                 class="form-control">
        </div>

        <!-- Designation -->
        <div class="col-md-6 mb-3 faculty-field"
             style="display:none;">
          <label class="form-label">Designation *</label>
          <input name="designation"
                 class="form-control">
        </div>

        <!-- Phone -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Phone Number *</label>
          <input name="phone"
                 class="form-control" required>
        </div>

        <!-- Password -->
        <div class="col-md-6 mb-3">
          <label class="form-label">Password *</label>
          <input type="password"
                 name="password"
                 class="form-control" required>
        </div>

        <!-- Confirm Password -->
        <div class="col-md-6 mb-3">
          <label class="form-label">
            Confirm Password *
          </label>
          <input type="password"
                 name="confirmPassword"
                 class="form-control" required>
        </div>

      </div>

      <!-- Button -->
      <div class="text-end">
        <button class="btn btn-danger px-4">
          Create Account
        </button>
      </div>

    </form>

  </div>

</div>

<!-- ========== SCRIPT ========== -->

<script>
  const roleSelect = document.getElementById("role");

  const studentFields =
    document.querySelectorAll(".student-field");

  const facultyFields =
    document.querySelectorAll(".faculty-field");

  roleSelect.addEventListener("change", () => {

    if(roleSelect.value === "Faculty"){

      // Hide student fields
      studentFields.forEach(field=>{
        field.style.display="none";
      });

      // Show faculty fields
      facultyFields.forEach(field=>{
        field.style.display="block";
      });

    } else {

      // Show student fields
      studentFields.forEach(field=>{
        field.style.display="block";
      });

      // Hide faculty fields
      facultyFields.forEach(field=>{
        field.style.display="none";
      });

    }

  });
</script>
