<!DOCTYPE html>
<html lang="en">
<head>

<meta charset="UTF-8">
<title>Upcoming Events</title>

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet">

<!-- Custom CSS -->
<link rel="stylesheet" href="/css/events.css">

</head>
<body>

<div class="container mt-4">

  <!-- ===== Upcoming Events Box ===== -->
  <div class="upcoming-box shadow-sm">

    <div class="d-flex justify-content-between">

      <h5 class="fw-bold">Upcoming Events</h5>

      <i class="bi bi-calendar3"></i>

    </div>

    <p class="text-muted small mt-2">
      No upcoming events at the moment
    </p>

  </div>


  <!-- ===== Filter Buttons ===== -->
  <div class="text-center mt-4 mb-4">

    <button class="btn btn-danger filter-btn"
            data-filter="all">
      All Events
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="seminar">
      Seminars
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="workshop">
      Workshops
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="hackathon">
      Hackathons
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="quiz">
      Quizzes
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="talk">
      Talk Shows
    </button>

    <button class="btn btn-outline-info filter-btn"
            data-filter="bootcamp">
      Bootcamps
    </button>

  </div>


  <!-- ===== Event Cards ===== -->
  <div class="row g-4">

    <!-- Workshop -->
    <div class="col-md-4 event-card"
         data-category="workshop">

      <div class="card shadow-sm">

        <img src="/images/workshop.jpg"
             class="card-img-top">

        <div class="card-body">

          <span class="badge bg-info">
            Workshop
          </span>

          <h6 class="mt-2 fw-bold">
            Web Development Workshop
          </h6>

          <p class="small text-muted">
            Learn modern web development
            techniques from industry experts.
          </p>

          <div class="d-flex justify-content-between align-items-center">

            <small class="text-muted">
              2025-05-15
            </small>

            <!-- FIXED BUTTON -->
            <a href="/login"
               class="btn btn-outline-info">
               Register Now
            </a>

          </div>

        </div>

      </div>
    </div>


    <!-- Seminar -->
    <div class="col-md-4 event-card"
         data-category="seminar">

      <div class="card shadow-sm">

        <img src="/images/seminar.jpg"
             class="card-img-top">

        <div class="card-body">

          <span class="badge bg-danger">
            Seminar
          </span>

          <h6 class="mt-2 fw-bold">
            AI & Machine Learning Seminar
          </h6>

          <p class="small text-muted">
            Explore the latest trends in
            AI and Machine Learning.
          </p>

          <div class="d-flex justify-content-between align-items-center">

            <small class="text-muted">
              2025-05-20
            </small>

            <!-- FIXED BUTTON -->
            <a href="/login"
               class="btn btn-outline-info">
               Register Now
            </a>

          </div>

        </div>

      </div>
    </div>


    <!-- Hackathon -->
    <div class="col-md-4 event-card"
         data-category="hackathon">

      <div class="card shadow-sm">

        <img src="/images/hackathon.jpg"
             class="card-img-top">

        <div class="card-body">

          <span class="badge bg-dark">
            Hackathon
          </span>

          <h6 class="mt-2 fw-bold">
            College Hackathon 2025
          </h6>

          <p class="small text-muted">
            24-hour coding challenge
            with amazing prizes.
          </p>

          <div class="d-flex justify-content-between align-items-center">

            <small class="text-muted">
              2025-06-01
            </small>

            <!-- FIXED BUTTON -->
            <a href="/login"
               class="btn btn-outline-info">
               Register Now
            </a>

          </div>

        </div>

      </div>
    </div>

  </div>

</div>


<!-- JS -->
<script src="/js/events.js"></script>

</body>
</html>
